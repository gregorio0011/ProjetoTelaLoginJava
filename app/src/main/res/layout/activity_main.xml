<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="116dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="Faça login para acessar sua conta"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <!-- Imagem -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="284dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="Imagem de motorista e passageiro"
        android:scaleType="centerInside"
        android:src="@drawable/login_image" />

    <!-- Container dos botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Botão Motorista -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp">

            <!-- Botão invisível cobrindo toda a área -->
            <Button
                android:id="@+id/btnMotorista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"/>

            <!-- Conteúdo do botão Motorista -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Motorista"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_forward" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Botão Passageiro -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <!-- Botão invisível cobrindo toda a área -->
            <Button
                android:id="@+id/btnPassageiro"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <!-- Conteúdo do botão Passageiro -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Passageiro"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_forward" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>